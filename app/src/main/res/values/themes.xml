<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--        <item name="colorPrimary">@color/theme_light_primary</item>-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundTint">@color/theme_light_surface_container_high</item>
    </style>

    <style name="ThemeAppToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/theme_light_surface</item>
        <item name="navigationIconTint">@color/theme_light_on_surface</item>
        <item name="titleTextColor">@color/theme_light_on_surface</item>
    </style>

    <style name="ThemeTextInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/theme_light_surface_container_highest</item>
        <item name="endIconTint">@color/theme_light_on_surface_variant</item>
        <item name="android:textColorHint">@color/theme_light_on_surface_variant</item>
        <item name="android:textColor">@color/theme_light_on_surface</item>
    </style>

    <style name="ThemeSelectItemStyle" parent="Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/theme_light_surface_container_highest</item>
        <item name="android:textColorHint">@color/theme_light_on_surface_variant</item>
        <item name="endIconTint">@color/theme_light_on_surface_variant</item>
    </style>

    <style name="ThemeContactsButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/theme_light_on_primary</item>
        <item name="backgroundTint">@color/theme_light_primary</item>
    </style>

    <style name="ThemeSigninTitleStyle">
        <item name="android:textColor">@color/theme_light_on_surface</item>
    </style>

    <style name="ThemeSigninTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/theme_light_primary</item>
    </style>

    <style name="ThemeSigninButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/theme_light_primary</item>
    </style>

    <style name="ThemeSigninAltButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/theme_light_secondary</item>
    </style>

    <style name="ThemeCartAltTextStyle">
        <item name="android:textColor">@color/theme_light_on_surface_variant</item>
    </style>

    <style name="ThemeCartTextStyle">
        <item name="android:textColor">@color/theme_light_on_surface</item>
    </style>

    <style name="ThemeCartAmountTextStyle">
        <item name="android:textColor">@color/theme_light_tertiary</item>
    </style>

    <style name="ThemeCartButtonStyle" parent="ContactsButtonStyle">
        <item name="iconTint">@color/theme_light_on_primary</item>
    </style>

    <style name="Theme.ViewResources" parent="Base.Theme.ViewResources" />
</resources>