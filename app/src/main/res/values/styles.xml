<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundTint">@color/theme_light_surface_container_high</item>
    </style>

    <style name="AppToolbarStyleBase" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/theme_light_surface</item>
        <item name="navigationIconTint">@color/theme_light_on_surface</item>
        <item name="titleTextColor">@color/theme_light_on_surface</item>
    </style>

    <style name="TextInputStyleBase" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/theme_light_surface_container_highest</item>
        <item name="endIconTint">@color/theme_light_on_surface_variant</item>
        <item name="android:textColorHint">@color/theme_light_on_surface_variant</item>
        <item name="android:textColor">@color/theme_light_on_surface</item>
    </style>

    <style name="SelectItemStyleBase" parent="Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/theme_light_surface_container_highest</item>
        <item name="android:textColorHint">@color/theme_light_on_surface_variant</item>
        <item name="endIconTint">@color/theme_light_on_surface_variant</item>
    </style>

    <style name="ContactsButtonStyleBase" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/theme_light_on_primary</item>
        <item name="backgroundTint">@color/theme_light_primary</item>
    </style>

    <style name="SigninTitleStyleBase">
        <item name="android:textColor">@color/theme_light_on_surface</item>
    </style>

    <style name="SigninTextButtonStyleBase" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/theme_light_primary</item>
    </style>

    <style name="SigninButtonStyleBase" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/theme_light_primary</item>
    </style>

    <style name="SigninAltButtonStyleBase" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/theme_light_secondary</item>
    </style>

    <style name="CartTextStyleBase">
        <item name="android:textColor">@color/theme_light_on_surface</item>
    </style>

    <style name="CartAltTextStyleBase">
        <item name="android:textColor">@color/theme_light_on_surface_variant</item>
    </style>

    <style name="CartAmountTextStyleBase">
        <item name="android:textColor">@color/theme_light_tertiary</item>
    </style>

    <style name="CartButtonStyleBase" parent="ContactsButtonStyleBase">
        <item name="iconTint">@color/theme_light_on_primary</item>
    </style>

    <style name="CartLayoutBase">
        <item name="android:background">@color/theme_light_background</item>
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
    </style>

    <style name="AppToolbarStyle" parent="AppToolbarStyleBase.26">
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
        <item name="minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ContactsTextInputStyle" parent="TextInputStyleBase">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textSize">@dimen/textSizeBodyLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="SelectItemStyle" parent="SelectItemStyleBase">
        <item name="android:textSize">@dimen/textSizeBodyLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="ContactsButtonStyle" parent="ContactsButtonStyleBase">
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="SigninTitleStyle" parent="SigninTitleStyleBase">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSizeHeadlineSmall</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SigninTextButtonStyle" parent="SigninTextButtonStyleBase">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="SigninButtonStyle" parent="SigninButtonStyleBase">
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="SigninAltButtonStyle" parent="SigninAltButtonStyleBase">
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartCountTextStyle" parent="CartAltTextStyleBase">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartItemDescTextStyle" parent="CartAltTextStyleBase">
        <item name="android:textSize">@dimen/textSizeBodyMedium</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartTitleTextStyle" parent="CartTextStyleBase">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartAmountTextStyle" parent="CartAmountTextStyleBase">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartAtlSubTextStyle" parent="CartTextStyleBase">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartSubAmountTextStyle" parent="CartAmountTextStyleBase">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartButtonStyle" parent="CartButtonStyleBase">
        <item name="icon">@drawable/mood_24px</item>
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="CartBottomSheet" parent="CartLayoutBase">
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
        <item name="behavior_peekHeight">@dimen/bottomSheetPeekHeight</item>
    </style>

</resources>