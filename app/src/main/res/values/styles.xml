<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
    </style>

    <style name="AppToolbarStyle" parent="ThemeAppToolbarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
        <item name="minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ContactsTextInputStyle" parent="ThemeTextInputStyle">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textSize">@dimen/textSizeBodyLarge</item>
    </style>

    <style name="SelectItemStyle" parent="ThemeSelectItemStyle">
        <item name="android:textSize">@dimen/textSizeBodyLarge</item>
    </style>

    <style name="ContactsButtonStyle" parent="ThemeContactsButtonStyle">
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
    </style>

    <style name="SigninTitleStyle" parent="ThemeSigninTitleStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSizeHeadlineSmall</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SigninTextButtonStyle" parent="ThemeSigninTextButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
    </style>

    <style name="SigninButtonStyle" parent="ThemeSigninButtonStyle">
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
    </style>

    <style name="SigninAltButtonStyle" parent="ThemeSigninAltButtonStyle">
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
    </style>

    <style name="CartCountTextStyle" parent="ThemeCartAltTextStyle">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
    </style>

    <style name="CartItemDescTextStyle" parent="ThemeCartAltTextStyle">
        <item name="android:textSize">@dimen/textSizeBodyMedium</item>
    </style>

    <style name="CartTitleTextStyle" parent="ThemeCartTextStyle">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
    </style>

    <style name="CartAmountTextStyle" parent="ThemeCartAmountTextStyle">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
    </style>

    <style name="CartAtlSubTextStyle" parent="ThemeCartTextStyle">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
    </style>

    <style name="CartSubAmountTextStyle" parent="ThemeCartAmountTextStyle">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
    </style>

    <style name="CartButtonStyle" parent="ThemeCartButtonStyle">
        <item name="icon">@drawable/mood_24px</item>
        <item name="android:textSize">@dimen/textSizeLabelLarge</item>
    </style>


</resources>